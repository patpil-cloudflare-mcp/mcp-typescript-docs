{
  "name": "pilpat-mcp-security",
  "version": "1.1.0",
  "description": "Security utilities for Cloudflare MCP servers: output sanitization and PII redaction with Polish market support (PESEL, ID cards, passports)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./sanitization": {
      "import": "./dist/sanitization.js",
      "types": "./dist/sanitization.d.ts"
    },
    "./pii-redaction": {
      "import": "./dist/pii-redaction.js",
      "types": "./dist/pii-redaction.d.ts"
    },
    "./validation": {
      "import": "./dist/validation.js",
      "types": "./dist/validation.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "prepublish": "npm run build && npm run test:coverage"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "mcp",
    "security",
    "sanitization",
    "pii",
    "redaction",
    "output-filtering",
    "polish",
    "pesel",
    "poland",
    "gdpr",
    "privacy",
    "data-protection"
  ],
  "author": "wtyczki",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
